<div data-controller="desktop" id="system_properties" class="window config_window">
    <%= render '/desktop/window-frame', app1: 'System Properties', task: task  %>
    <div data-controller="system-properties" >
    

    <div class="location-container">
        <div class="location-image">
        <%= image_tag("location_sidebar.png") %>
        </div>

        <div class="location-form">
        <% @all_rewards.each do | reward| %>
        <%= reward.title + ' ' + reward.amount.to_s + '%' %>
        <%= button_to "Del", reward_path(reward), method: :delete %>
        <br/>
        <% end %>

        <%= render '/rewards/form',  reward: @reward %>
        

        <hr />

        <div class="commodity-form">
            <% @all_commodities.each do | commodity| %>
            <%= commodity.name + ' ' + commodity.price.to_s + 'AUEC/SCU' %>
            <%= button_to "Del", commodity_path(commodity), method: :delete %>
            <br/>
            <% end %>

            <%= render '/commodities/form',  commodity: @commodity %>

        </div>


        </div>



    </div>


<hr />


    </div>
</div>
