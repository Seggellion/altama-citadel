
        <%= render '/codex/header'%>
<%# @window_title = @current_task.state.split('|').last %>



        <div id="codex_title"><h1>
            Data Management
           </h1>
        </div>


        <div id="codex_body" >
        <div class="codex-left-viewport">       
         
            <div class="viewport-main">
                <div class="codex-column-header">
                    <small class="down-arrow-block">▼</small>
                    Views
                </div>                                                
            </div>
            <div class="viewport-footer">
                Related Articles
            </div>
        
        </div>

        <% if @current_task.state.include?('find') %>
        <%= render '/codex/find' %>
        <% end %>


        
        <div class="codex-center-viewport show">




<div class="text-content">
<div class="codex-column-header">
<small class="down-arrow-block">▼</small>Custom Data Managemeent
</div>
<p>
Manage Data
</p>
<ul>
    <li>
        <%= link_to  "Connect to Gallog", populate_commodity_path %>
    </li>
    <li>
        <%= link_to "Destroy all commodities", destroy_commodity_path %>
    </li>
    <li>
        <%= link_to "Populate Locations", populate_locations_path %>
    </li>
</ul>

    <div class="log-container">

        <h2>Logs</h2>
        <div class="log-list">        
            <% @commodity_stubs.each do |stub|  %>
                <div class="stub-row">
                    <div class="stub-name">
                        <%= stub.commodity.name %>
                    </div>
                    <div class="stub-username">
                        <%= stub.user.username %>
                    </div>
                    <div class="stub-buy">
                        <%= stub.buy_price %>
                    </div>
                    <div class="stub-sell">
                        <%= stub.sell_price %>
                    </div>
                    <div class="stub-date">
                        <%= stub.created_at.in_time_zone('Pacific Time (US & Canada)').strftime("%A, %B %d, %H:%M:%S") %>
                    </div>
                </div>
            <% end %>
        </div>

    </div>

</div>

</div>        
        </div>

    <style>
        .log-list{
            display:flex;
            flex-direction:column;
            justify-content: space-between;
            height:500px;
            overflow: auto;
        }
        .stub-row{
            display:flex;
            flex-direction:row;
            align-items:center;
            justify-content: space-between;
            flex-wrap: wrap-reverse;
            border-bottom: 1px solid grey;
        }
    </style>