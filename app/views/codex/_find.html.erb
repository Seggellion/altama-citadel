                <%= form.text_field :query %>
                <%= form.submit "Search" %>
            <% end %>
        </div>

        <div class="find-container">
        <% Article.all.sort_by(&:title).each do |article|  %>

        <%= link_to codex_show_article_path(id: article.id), class:'article-select' do %>
            <%= article.title %>
        <% end %>

            <% end %>
