<%= form_with(model: rfa) do |form| %>
  <div class="rfa-open-container">
    <% if rfa.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(rfa.errors.count, "error") %> prohibited this rfa from being saved:</h2>

        <ul>
          <% rfa.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div class="rfa-params column">
  <div class="field"><label>Assigned to:</label><%= form.select :user_assigned_id, ["Seggellion","Hermitmech","WhenyouCant"] %></div>

  <div class="field"><label>Priority:</label> <%= form.select :priority_id, ["Urgent","Hight","Norminal"] %></div>
  <div class="field"><label>Fuel Amt:</label> <%= form.number_field :total_fuel %></div>
  <div class="field"><label>Price:</label> <%= form.number_field :total_price %></div>
  <div class="field"><label>Cost:</label> <%= form.number_field :total_cost %></div>
  <div class="field"><label>Aec:</label> <%= form.number_field :aec_rewards %></div>
  </div>

  <div class="rfa-comms column">
  <div class="field">Title: <%= form.text_field :title %></div>
  <div class="field">Description: <%= form.text_field :description %></div>
  </div>

  <div class="rfa-info column">
  <div class="rfa-module">
<h2>Altama Member Search</h2>
  <div class="field">RSI: <%= form.text_field :rsi_username %></div>
  <div class="field">Location: <%= form.select :location_id, ["Cellin","Daymar","Crusader"] %></div>
  <div class="field">Ship: <%= form.select :ship_id, ["Mustang","85x","Hornet"] %></div>
<div class="rfa-action-buttons">
  <button>Storefront</button><button>Admin</button><button>Internal</button>
  </div>
  <ul>
    <li>United States</li>
    <li>(GMT-05:00)America/New York</li>
    <li>Altama Affiliate</h1>
    <li>Wed Mar 29 2017</li>
  </ul>
  </div>
  
  <div style="display:none">
  <%= form.submit %>
  </div>
  <div id="status_field" class="field"><%= form.select :status_id, ["Submit as Open","Submit as In Progress","Submit as  Closed"] %></div>
  </div>


</div>
<% end %>
