<div data-controller="desktop" id="asl" class="window memo">
    <%= render '/desktop/window-frame', app1: 'Memo', task: Task.last %>

    <% if @current_task && @current_task.memo_text %>

        <div class="memo-body">
            <div class="memo-icon-container">
                <%= image_tag( "all_icons.png", class: "error_icon")  %> 
            </div>
            <div class="memo-text">
                This is an error message!

                <table>
                <%= @current_task.memo_text %>
                </table>
            </div>
        </div>
    <% end %>
</div>